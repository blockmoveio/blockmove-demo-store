<section class="checkout-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="billing-details">
                    <h3 class="title">Billing Details</h3>
                    <div class="bar"></div>

                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                <label>Your Name (optional)</label>
                                <input type="text" class="form-control">
                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                <label>Email Address (optional)</label>
                                <input type="email" class="form-control">
                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                <label>Order Notes (optional)</label>
                                <textarea name="notes" id="notes" cols="30" rows="4" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-12">
                <div class="order-details">
                    <h3 class="title">Your Order</h3>
                    <div class="bar"></div>

                    <div class="order-table table-responsive">
                        <table class="table table-bordered" id="checkout_table">
                            <thead>
                            <tr>
                                <th scope="col">Product Name</th>
                                <th scope="col">Total</th>
                            </tr>
                            </thead>

                            <tbody></tbody>

                            <tfoot>
                            <tr>
                                <td class="order-subtotal">
                                    <span>Cart Subtotal</span>
                                </td>

                                <td class="order-subtotal-price">
                                    <span class="order-subtotal-amount">$<span>0.00</span></span>
                                </td>
                            </tr>
                            <tr>
                                <td class="order-shipping">
                                    <span>Shipping</span>
                                </td>

                                <td class="shipping-price">
                                    <span>$5.00</span>
                                </td>
                            </tr>
                            <tr>
                                <td class="total-price">
                                    <span>Order Total</span>
                                </td>

                                <td class="product-subtotal">
                                    <span class="subtotal-amount">$<span>0.00</span></span>
                                </td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>

                    <form method="post" action="https://checkout.blockmove.io">
                        <div class="payment-method">
                            <p>
                                <input type="radio" id="btc" name="_bmc_crypto" checked value="BTC">
                                <label for="btc">
                                    <img src="https://blockmove.io/assets/coins/color/btc.svg" alt="">
                                    Bitcoin
                                </label>
                            </p>

                            <p>
                                <input type="radio" id="tltc" name="_bmc_crypto" value="tLTC">
                                <label for="tltc">
                                    <img src="https://blockmove.io/assets/coins/color/ltc.svg" alt="">
                                    Litecoin [Testnet]
                                </label>
                            </p>

                            <p>
                                <input type="radio" id="teth" name="_bmc_crypto" value="tETH">
                                <label for="teth">
                                    <img src="https://blockmove.io/assets/coins/color/eth.svg" alt="">
                                    Ether [Testnet]
                                </label>
                            </p>

                            <p>
                                <input type="radio" id="txrp" name="_bmc_crypto" value="tXRP">
                                <label for="txrp">
                                    <img src="https://blockmove.io/assets/coins/color/xrp.svg" alt="">
                                    Ripple [Testnet]
                                </label>
                            </p>

                            <p>
                                You will be redirected to Blockmove.io to complete your purchase.
                            </p>
                        </div>

                        <input type="hidden" name="_bmc_id" value="wv9dM1QPza1Q5hVeMahadxAUnh9Ayf9J">
                        <input type="hidden" name="_bmc_order" value="378364">
                        <input type="hidden" name="_bmc_item" value="Cart Items">
                        <input type="hidden" name="_bmc_amount" value="100" id="inp_amount">
                        <input type="hidden" name="_bmc_currency" value="USD">
                        <input type="hidden" name="_bmc_language" value="en">
                        <button type="submit" class="btn btn-primary order-btn btn-block">Place Order <i class="icofont-arrow-right"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>